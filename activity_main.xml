<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/littledeviltiles"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonPunch"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/punchin"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:text="RESET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonClock"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/clockout"
        app:layout_constraintTop_toBottomOf="@+id/Time"
        tools:layout_editor_absoluteX="40dp" />

    <EditText
        android:id="@+id/Time"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:background="#de0101"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="-"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        app:layout_constraintTop_toBottomOf="@+id/buttonPunch"
        tools:layout_editor_absoluteX="103dp" />

    <EditText
        android:id="@+id/Time2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:background="@android:color/holo_blue_bright"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="  Seconds:"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/Time3"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:background="#de0101"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="-"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        app:layout_constraintStart_toEndOf="@+id/Time"
        tools:layout_editor_absoluteY="146dp" />

</android.support.constraint.ConstraintLayout>